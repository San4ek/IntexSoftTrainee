<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="1" author="eugene-yuntsevich">
        <addForeignKeyConstraint baseTableName="StockModule"
                                 baseColumnNames="color"
                                 constraintName="colorForeignKey"
                                 referencedTableName="ColorModule"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="2" author="eugene-yuntsevich">
        <addForeignKeyConstraint baseTableName="StockModule"
                                 baseColumnNames="brand"
                                 constraintName="brandForeignKey"
                                 referencedTableName="BrandModule"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="3" author="eugene-yuntsevich">
        <addForeignKeyConstraint baseTableName="StockModule"
                                 baseColumnNames="type"
                                 constraintName="typeForeignKey"
                                 referencedTableName="TypeModule"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="4" author="eugene-yuntsevich">
        <addForeignKeyConstraint baseTableName="StockModule"
                                 baseColumnNames="size"
                                 constraintName="sizeForeignKey"
                                 referencedTableName="SizeModule"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="5" author="eugene-yuntsevich">
        <addForeignKeyConstraint baseTableName="StockModule"
                                 baseColumnNames="status"
                                 constraintName="statusForeignKey"
                                 referencedTableName="StatusModule"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>